<div class="container" id="input-container">
    <div class="row">
        <div class="col s12">
            <h4 id="state-header">Location</h4>
            <div class="input-field">
                <select id="state">
                <option value="" disabled selected>Select a State</option>
                <option value="CA" selected>CA</option>
                </select>
            </div>
            <h4 id="distance-header">Distance</h4>
            <div class="input-field">
                <select id="distance">
                <option value="" disabled selected>Select a Race Distance</option>
                <option value="Marathon" selected>Marathon</option>
                </select>
            </div>
            <div id="slider-date-container">
                <h4 id="time-header">Time Period</h4>
                {{!-- <label id="time-label">Select a Time Period</label> --}}
                <div id="slider-date"></div>
                <span class="" id="event-start"></span>
                <span class="" id="event-end"></span>
            </div>
            <button id="race-submit-btn" class="btn waves-effect waves-light" type="submit" name="action">Find Your Race</button>
        </div>
    </div>
</div>

