<div class="container" id="login-container">
    <div class="row">
        <div class="col s12">
            <span id="user"></span><span id="login">Login</span>
        </div>
    </div>
</div>

<div class="container" id="jumbotron">
    <div class="row">
        <div class="col s12">
            <img id="running-man-img" src="/assets/images/running-icon.png">
            <h1 id="race-header">Race Finder</h1>
        </div>
    </div>
</div>

<div class="container" id="input-container">
    <div class="row">
        <div class="col s12">
            <h3 id="input-header">Find Your Race</h3>
            <div class="input-field">
                <select id="state">
                <option value="" disabled selected>Select a State</option>
                <option value="CA">CA</option>
                </select>
            </div>
            <div id="slider-date-container">
                <label id="time-label">Select a Time Period</label>
                <div id="slider-date"></div>
                <span class="" id="event-start"></span>
                <span class="" id="event-end"></span>
            </div>
            <button id="submit-btn" class="btn waves-effect waves-light" type="submit" name="action">Find Your Race</button>
        </div>
    </div>
</div>

<br>

  <!-- Results Modal -->
  <div id="results-modal" class="modal">
    <div class="modal-content">
        <h3 id="match-header">Random Match</h3>
        <p id="match-name"></p>
        <p><span id="match-city"></span>, <span id="match-state"></span></p>
        <p id="match-date"></p>
        <p><span id="match-temp"></span>&deg;</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">OK</a>
    </div>
  </div>

<!-- customer login modal -->
<div id="login-modal" class="modal">
    <div class="modal-dialog">
        <div class="modal-content text-center">
            <div class="modal-header">
                <h2 class="modal-title"><strong>Login</strong></h2>
            </div>
            <div class="modal-body">
                <h3>Customer Name</h3>
                <form action="/api/customer" method="POST" class="button-size" autocomplete="off">
                    <input id="customer-text" type="text" name="customer"></textarea>
                    <button id="login-button" class="btn btn-primary" type="submit">Login</button>
                </form>
            </div>
        </div>

    </div>
</div>