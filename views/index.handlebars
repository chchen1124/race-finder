<!-- Results Modal -->
<div id="results-modal" class="modal">
    <div class="modal-content">
        <h3 id="match-header">Random Match</h3>
        <p id="match-name"></p>
        <p><span id="match-city"></span>, <span id="match-state"></span></p>
        <p id="match-date"></p>
        <p><span id="match-temp"></span>&deg;</p>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">OK</a>
    </div>
</div>

<!-- login modal -->
<div id="login-modal" class="modal">
    <div class="modal-content">
        <h3 id="match-header">Login</h3>
        <div class="input-field">
            <input id="user-name" type="text">
            <label for="user-name">User ID</label>
            <button id="user-submit-btn" class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
        </div>
</div>

<!-- state validation modal -->
<div id="validate-modal-state" class="modal">
    <div class="modal-content">
        <h3 id="match-header">Error</h3>
        <p>Please select a state</p>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">OK</a>
    </div>
</div>

<!-- distance validation modal -->
<div id="validate-modal-distance" class="modal">
    <div class="modal-content">
        <h3 id="match-header">Error</h3>
        <p>Please select a race distance</p>
    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">OK</a>
    </div>
</div>